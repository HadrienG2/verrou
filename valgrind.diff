+      AC_MSG_ERROR([A compiler with fmaintrin.h is required for --enable-verrou-fma ])
+  ])
+else
+  AM_CONDITIONAL([HAVE_FMA_INTRIN], test x$vg_cv_verrou_fma = xyes,[])
